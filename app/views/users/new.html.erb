<section class="admin-products-new">

  <header class="page-header">
    <h1>Register!</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :user, url: '/users' do |form| %>


        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, required: true, class: 'form-control' %>
        </div>

        <%= form.submit 'Register', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>